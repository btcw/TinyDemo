<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--item1-->
        <LinearLayout
            android:id="@+id/selectable_bar_ll_on"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/selectable_bar_icon_on"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@color/selectable_bar_not_selected" />

            <TextView
                android:id="@+id/selectable_bar_text_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="正常"
                android:textColor="@color/selectable_bar_not_selected"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            android:src="@color/light_gray" />
        <!--item2-->
        <LinearLayout
            android:id="@+id/selectable_bar_ll_off"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/selectable_bar_icon_off"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@color/selectable_bar_not_selected" />

            <TextView
                android:id="@+id/selectable_bar_text_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="离线"
                android:textColor="@color/selectable_bar_not_selected"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            android:src="@color/light_gray" />

        <!--item3-->
        <LinearLayout
            android:id="@+id/selectable_bar_ll_error"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/selectable_bar_icon_error"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@color/selectable_bar_not_selected" />

            <TextView
                android:id="@+id/selectable_bar_text_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="故障"
                android:textColor="@color/selectable_bar_not_selected"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>